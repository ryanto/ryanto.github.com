<div class="Blog-post">
  <h1 class="Blog-post__title">
    <a href="<%= current_article.url %>"
      ><%= current_article.title %></a>
  </h1>

  <div class="By-line">
    <%= image_tag "ryan.png",
        class: "By-line__image",
        height: 25,
        width: 25 %>

    <div class="By-line__author">
      Ryan Toronto
    </div>

    <% if current_article.date %>
      <div class="By-line__date">
        <%= current_article.date.strftime("%B %e, %Y") %>
      </div>
    <% end %>
  </div>

  <%= current_article.body %>
</div>

<div class="About">
  <%= image_tag "ryan.png",
      class: "About__image",
      height: 60,
      width: 60 %>

  <div class="About__info">
    <div class="About__info__name">Ryan Toronto</div>
    <p class="About__info__text">
      Ember developer &amp; Basketball fan
    </p>
  </div>

  <div class="About__links">
    <a href="/"
       class="About__link">Blog</a>

    <a href="https://twitter.com/ryantotweets"
       class="About__link">Twitter</a>

    <a href="https://github.com/ryanto"
       class="About__link">Github</a>
  </div>
</div>

